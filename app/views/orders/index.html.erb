<div style="height: 300px;" class="row grad">
    <div class="col-lg-4">
      <div class="glfIcons">
        <i class="fa fa-sign-out"></i>
            <h3 class="robot">Add Order to Chain</h3>
            <p>Sales Person generates orders</p>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="glfIcons"><i class="fa fa-tasks"></i>
        <h3 class="robot">Process Order in Chain</h3>
            <p>Sales Person generates orders</p>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="glfIcons"><i class="fa fa-thumbs-up"></i>
          <h3 class="robot">Confirm Delivery</h3>
          <p>Sales Person generates orders</p>
      </div>
    </div>
  </div>
<%- model_class = Order -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:custumer) %></th>
      <th><%= model_class.human_attribute_name(:product) %></th>
      <th><%= model_class.human_attribute_name(:account_approval) %></th>
      <th><%= model_class.human_attribute_name(:account_comment) %></th>
      <th><%= model_class.human_attribute_name(:warehouse_approval) %></th>
      <th><%= model_class.human_attribute_name(:destination) %></th>
      <th><%= model_class.human_attribute_name(:current_location) %></th>
      <th><%= model_class.human_attribute_name(:delivered) %></th>
      <th><%= model_class.human_attribute_name(:warehouse_comment) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.id, order_path(order) %></td>
        <td><%= order.custumer %></td>
        <td><%= order.product %></td>
        <td><%= order.account_approval %></td>
        <td><%= order.account_comment %></td>
        <td><%= order.warehouse_approval %></td>
        <td><%= order.destination %></td>
        <td><%= order.current_location %></td>
        <td><%= order.delivered %></td>
        <td><%= order.warehouse_comment %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_order_path(order), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      order_path(order),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_order_path,
            :class => 'btn btn-primary' %>
